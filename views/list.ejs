<%- include("header"); -%>

<div class="box" id="heading">
    <h1><%=listTitle%></h1>
</div>

<div class="box">
    <% tasksToDo.forEach(function(e){ %>

    <form action="/delete" method="POST" >
        <div class="item">
            <input type="checkbox" name='checkbox' value="<%= e._id %>" onChange='this.form.submit()'>
            <p><%=e.name%></p>
        </div>
        <input type="hidden" name='listType' value="<%=listTitle%>" >
    </form>

    <% }) %>
    <form class="item" action="/" method="POST">
        <input name="nextTask" type="text" placeholder="Your Next Tast" autocomplete="off">
        <button name="listType" value=<%=listTitle%> type="submit">+</button>
    </form>

</div>


<%-include("footer");-%>